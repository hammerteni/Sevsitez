            <error statusCode="404" redirect="FileNotFound.htm" />
        </customErrors>
        -->
    <pages controlRenderingCompatibilityVersion="3.5" clientIDMode="Static"/>
    <sessionState mode="InProc" cookieless="false" timeout="60"/>
    <!-- file upload maximum size = 100 Mb and maximum wait = 600 seconds -->
    <httpRuntime executionTimeout="100000" maxRequestLength="214748364"/>
    <!-- включение режима трассировки на уровне приложения 
    <trace enabled="true" pageOutput="true" requestLimit="15" mostRecent="true" /> -->
  </system.web>
  <!-- 
        The system.webServer section is required for running ASP.NET AJAX under Internet
        Information Services 7.0.  It is not necessary for previous version of IIS.
    -->
